{
  "name": "cap",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@sap/cds": "^8",
    "@sap/cds-hana": "^1",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.7",
    "@sap/hana-client": "^2.23.24",
    "@sap/xssec": "^4",
    "express": "^4",
    "npm": "^11.0.0",
    "passport": "^0"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^8",
    "@sap/ux-specification": "^1.120.0"
  },
  "scripts": {
    "start": "cds-serve",
    "spiderman": "cds watch",
    "watch-purchaseorderapp": "cds watch --open purchaseorderapp/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "sapux": [
    "app/purchaseorderapp"
  ],
  "cds": {
    "requires": {
      "db": "hana",
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[development]": {
          "strategy": "mocked",
          "users": {
            "anubhav": {
              "roles": [
                "Viewer"
              ],
              "userAttributes": {
                "BankName": [
                  "My Bank of London"
                ]
              }
            },
            "ananya": {
              "roles": [
                "Viewer",
                "Admin"
              ],
              "userAttributes": {
                "BankName": [
                  "My Bank of New York",
                  "My Bank of Antioch"
                ]
              }
            }
          }
        },
        "[production]": {
          "strategy": "JWT"
        }
      }
    }
  }
}
